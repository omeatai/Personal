<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/web/css/styles.css" />
  </head>
  <body>
    <div class="body-container">
      <nav class="navbar"><%- include('partials/nav.ejs') %></nav>
      <main class="main">
        <section>
          <div class="home--title--container">
            <h1 class="home--title"><%= title %></h1>
          </div>

          <div class="home--container">
            <% allVideoFileNames.forEach(function(filename) { %>
            <div class="home--card">
              <a href="http://localhost:8000/{{{trimString this}}}">
                <video
                  class="home--video"
                  width="100%"
                  max-height="100%"
                  controlsList="nodownload"
                  oncontextmenu="return false;"
                  {{!
                  controls
                  }}
                >
                  <source
                    src="/videoplayer/<%= filename %>#t=10"
                    type="video/mp4"
                  />
                  <source
                    src="/videoplayer/<%= filename %>#t=10"
                    type="video/ogg"
                  />
                  Your browser does not support the video tag.
                </video>
              </a>
              <div class="home--card--title"><%= filename %></div>
            </div>

            <% }); %>
          </div>
        </section>
      </main>
      <footer class="footer"><%- include('partials/footer.ejs') %></footer>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
