<section>
  <div class="index--title--container">
    <div class="index--title">Topic: {{topic}}</div>
  </div>
  <div class="index--container">
    <div class="index--card">
      <video
        class="index--video"
        width="100%"
        max-height="100%"
        controlsList="nodownload"
        oncontextmenu="return false;"
        controls
      >
        <source src="/videoplayer/{{filename}}#t=1" type="video/mp4" />
        <source src="/videoplayer/{{filename}}#t=1" type="video/ogg" />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>

</section>